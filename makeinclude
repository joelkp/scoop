VERSION		= "1.0.0"

INCLUDEDIR	= $(MAINDIR)include/
OBJDIR		= $(MAINDIR)obj/
LIBDIR		= $(MAINDIR)lib/
LIBTARGET	= static # set blank to skip static library build
DSOTARGET	= shared # set blank to skip shared library build

# programs used
CC		= cc
MAKEDEPEND	= $(CC) -MM -DMAKEDEPEND
RANLIB		= ranlib
LN		= ln -s
RM		= rm -f
RMDIR		= rm -rf
MKDIR		= mkdir -p
LIBCOMMAND	= ar cr
DSOCOMMAND	= $(CC) $(LIBS) -shared -fPIC -o
CFLAGS		= -I$(INCLUDEDIR) -W -Wall -Wunused -O2 -fPIC
LFLAGS		= -L$(LIBDIR) -Wl,-rpath,$(LIBDIR)
LIBCFLAGS	= $(CFLAGS)
DSOCFLAGS	= $(CFLAGS)
OBJEXT		= .o
LIBOBJEXT	= .static-o
DSOOBJEXT	= .shared-o

# Windows *
ifdef COMSPEC
 LIBPREFIX	=
 LIBSUFFIX	= .a
 DSOPREFIX	=
 DSOSUFFIX	= .dll
 EXEEXT		= .exe
# *nix
else
 LIBPREFIX	= lib
 LIBSUFFIX	= .a
 DSOPREFIX	= lib
 DSOSUFFIX	= .so
 EXEEXT		=
endif

.SILENT:
.SUFFIXES:	.c .h .o .static-o .shared-o


.c.static-o:
	echo "Compiling $< for static library..."
	$(CC) $(LIBCFLAGS) -c $< -o $@

.c.shared-o:
	echo "Compiling $< for shared library..."
	$(CC) $(DSOCFLAGS) -c $< -o $@

.c.o:
	echo "Compiling $<..."
	$(CC) $(CFLAGS) -c $< -o $@

# EOF
